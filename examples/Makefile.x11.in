# Rule for wave
wave: wave.c ../lib/x11/libglfw.a
	$(CC) $(CFLAGS) wave.c $(LFLAGS) -o $@

clean:
	rm -f triangle listmodes mthello pong3d mtbench particles splitview \
	      mipmaps keytest gears boing wave

